---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('ja');
---

<BaseLayout>
  <Hero
    name={t.hero.name}
    tagline={t.hero.role}
    description={t.hero.description}
    ctaPrimary={t.hero.cta.contact}
    ctaSecondary={t.hero.cta.about}
    ctaPrimaryHref="/ja/contact"
    ctaSecondaryHref="/ja/blog"
  />

  <!-- Features Section -->
  <section class="bg-slate-50 py-20 dark:bg-slate-800">
    <div class="mx-auto max-w-6xl px-6">
      <div class="mb-12 text-center">
        <h2 class="mb-2 text-3xl font-bold text-slate-800 dark:text-white">
          {t.features.title}
        </h2>
        <p class="text-slate-500 dark:text-slate-400">{t.features.subtitle}</p>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {
          t.features.items.map((feature: { title: string; description: string }, index: number) => (
            <div class="rounded-lg bg-white p-6 shadow-sm dark:bg-slate-900">
              <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-blue-500 text-white">
                {index + 1}
              </div>
              <h3 class="mb-2 text-lg font-bold text-slate-800 dark:text-white">{feature.title}</h3>
              <p class="text-slate-500 dark:text-slate-400">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-blue-500 py-20">
    <div class="mx-auto max-w-4xl px-6 text-center">
      <h2 class="mb-4 text-3xl font-bold text-white">
        {t.cta.title}
      </h2>
      <p class="mb-8 text-white/80">
        {t.cta.description}
      </p>
      <a
        href="/ja/contact"
        class="inline-block rounded-lg bg-white px-8 py-3 font-medium text-blue-500 transition-colors hover:bg-white/90"
      >
        {t.cta.button}
      </a>
    </div>
  </section>
</BaseLayout>
